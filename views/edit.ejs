<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head'); -%>
</head>

<body>
    <%- include('includes/header'); -%>

    <%- include('includes/nav'); -%>

    <main>
        <h1>Edit Profile</h1>
        <div id="profilenave">
            <a id="hprofe" href="#" onclick="HumanProfileEdit();return false"><img src="images/icon_human.png" alt=""></a>
            <a id="aprofe" href="#" onclick="AnimalProfileEdit();return false"><img src="images/icon_animal.png" alt=""></a>
        </div>
        <form action="/edit" method="post">
            <div id="humanprofileedit">
                <label for="name">Name</label>
                <input type="text" id="name" name="name">
                <label for="age">Age</label>
                <input type="text" id="age" name="age">
                <label for="bio">Profile Biography</label>
                <textarea name="bio" id="bio" cols="30" rows="5"></textarea>
                <div id="int-list">
                    <fieldset>
                        <legend>Interests:</legend>
                        <% interests.forEach(function(interest){ %>
                        <input type="checkbox" name="interests" value="<%= interest %>" id="<%= interest %>">
                        <label for="<%= interest %>"><%= interest %></label><br>
                        <% }) %>
                    </fieldset>
                </div>
                <p>Pictures</p>
                <div id="pics"><img src="images/pic1.png" alt="pic1">
                <img src="images/defaultpic.png" alt="pic2">
                <img src="images/defaultpic.png" alt="pic3"></div>
            </div>

            <div id="animalprofileedit">
                <label for="name_a">Name</label>
                <input type="text" id="name_a" name="name_a">
                <label for="age_a">Age</label>
                <input type="text" id="age_a" name="age_a">
                <label for="type_a">Animal Type</label>
                <input type="text" id="type_a" name="type_a">
                <label for="breed_a">Breed</label>
                <input type="text" id="breed_a" name="breed_a">
                <label for="bio_a">Animal Biography</label>
                <textarea name="bio_a" id="bio_a" cols="30" rows="5"></textarea>
                <p>Pictures</p>
                <div id="pics"><img src="images/pic1.png" alt="pic1">
                <img src="images/defaultpic.png" alt="pic2">
                <img src="images/defaultpic.png" alt="pic3"></div>
            </div>
            <input type="submit" value="Opslaan">
        </form>
    </main>

    <script src="js/script.js"></script>
</body>

</html>