<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head'); -%>
</head>

<body>
    <%- include('includes/header'); -%>

    <%- include('includes/nav'); -%>

    <main>
        <section id="profilenav">
            <a id="humanbutton" href="#"><img src="images/icon_human.png" alt=""></a>
            <a id="animalbutton" href="#"><img src="images/icon_animal.png" alt=""></a>
        </section>
        <section id="humanprofile">
            <img id="previewpic" src="images/previewpic3.jpg" alt="">

            <h2 id="h2check"><%= profiles.name %></h2>
            <h3><%= profiles.age %> years old</h3>
            <p id="selected"><%= profiles.country %></p>
            <p><%= profiles.bio %></p>
            <ul id="interestlist">
                <% profiles.interests.forEach(function(item){ %>
                    <li><%= item %></li>
                    <% }) %>
            </ul>
        </section>
        <section id="animalprofile">
            <img id="previewpic_a" src="images/previewpic3.jpg" alt="">

            <h2><%= profiles.name_a %></h2>
            <h3><%= profiles.age_a %> years old</h3>
            <p><%= profiles.type_a %></p>  
            <p><%= profiles.breed_a %></p>  
            <p><%= profiles.bio_a %></p>        
        </section>
        <button type="button" class="profilebutton">Edit Profile</button>
    </main>

    <script src="js/profilescript.js"></script>
</body>

</html>